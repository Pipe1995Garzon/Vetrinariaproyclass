<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6" style="text-align: center; margin-left:300px; margin-top:30px">
            <center>
                <h1>Usuarios</h1>
            </center>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <a href="/admin/creausuario" class="btn btn-success">Agregar</a>
                    </tr>
                    <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Usuario</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Contraseña</th>
                        <th scope="col">Edad</th>
                        <th scope="col">Identificacion</th>
                        <th scope="col">Telefono</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each usua}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{nombre}}</td>
                        <td>{{nombres}}</td>
                        <td>{{pass}}</td>
                        <td>{{edad}}</td>
                        <td>{{identificacion}}</td>
                        <td>{{telefono}}</td>
                        <td>
                            <!-- Button trigger modal modificar -->
                            <button class="btn btn-outline-primary" data-toggle="modal"
                                data-target="#modalModificar{{id}}">Modificar</button>
                        </td>
                        <td>
                            <!-- Button trigger modal eliminar-->
                            <button class="btn btn-outline-danger" data-toggle="modal"
                                data-target="#modalEliminar{{id}}">Eliminar</button>
                        </td>
                    </tr>
                    <!-- Modal Modificar-->
                    <div class="modal fade" id="modalModificar{{id}}" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirmar modificación</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    ¿Esta seguro que desea modificar al usuario?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                    <a href="update/{{id}}" class="btn btn-primary">modificar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal Eliminar-->
                    <div class="modal fade" id="modalEliminar{{id}}" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirmar eliminación</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    ¿Esta seguro que desea eliminar al usuario?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                    <a href="delete/{{id}}" class="btn btn-danger">Eliminar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>