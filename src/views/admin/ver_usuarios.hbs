<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/images/portada1.jpg" width="400px" HEIGHT="400px" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/portada2.jpg" width="400px" HEIGHT="400px" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/portada3.jpg" width="400px" HEIGHT="400px" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
