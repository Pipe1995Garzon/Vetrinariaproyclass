<div class="container">
    <center> <h2>Administracion/Empleados</h2></center>
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6" style="text-align: center; margin-top:30px">
            <h2>Veterinaria myDogs</h2>
            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <img src="/images/conejos.jpg" width="200px" HEIGHT="200px">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <img src="/images/registrar.jpg" width="200px" HEIGHT="200px">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <img src="/images/registrar2.jpg" width="200px" HEIGHT="200px">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <img src="/images/registrar3.jpg" width="200px" HEIGHT="200px">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-sm-6 col-xs-6" style="text-align: center;  margin-top:80px">
            <center> <h2>Modificar</h2></center>
            <form action="" method="post">
                {{#each mostrarEmpleado}}
                <div class="form-group">
                    <input class="form-control" type="hidden" value="{{id_empleados}}" name="id" id="">
                </div>
                <div class="form-group">
                    <label for="nombre"></label>
                    <input type="text" class="form-control" name="nombre" value="{{nombre}}" id="nombre">
                </div>
                <div class="form-group">
                    <label for="Password"></label>
                    <input type="text" class="form-control" id="apellido" value="{{apellido}}" name="apellido">
                </div>
                <div class="form-group">
                    <label for="cedula"></label>
                    <input type="number" class="form-control" value="{{cedula}}" name="cedula"
                        id="cedula" placeholder="Cedula">
                </div>
                 <div class="form-group">
                    <label for="cargo"></label>
                    <input type="text" name="cargo" class="form-control" id="nombre" value="{{cargo}}">
                </div>

                {{/each}}
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="/admin/ver_empleados" class="btn btn-secondary">Volver</a>
            </form>
        </div>
    </div>
</div>


