<div class="container">
    <center>
        <h1>Empleados</h1>
    </center>
    <div class="row">
        <div class="col-sm-6" style=" margin-left:250px; margin-top:30px">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <a href="/admin/agregar_empleado" class="btn btn-success"><img src="/images/iconoe.jpg"
                                width="30" height="30"> Agregar</a>
                    </tr>
                    <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Cedula</th>
                        <th scope="col">Cargo</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each ConsultaEmpleados}}
                    <tr>
                        <th scope="row">{{id_empleados}}</th>
                        <td>{{nombre}}</td>
                        <td>{{apellido}}</td>
                        <td>{{cedula}}</td>
                        <td>{{cargo}}</td>
                        <td>
                            <!-- Button trigger modal modificar -->
                            <button class="btn btn-primary" data-toggle="modal" data-target="#modalModificar{{id_empleados}}"><img src="/images/editar.jpg" width="24" height="24"></button>
                        </td>
                        <td>
                            <!-- Button trigger modal eliminar-->
                            <button class="btn btn-danger" data-toggle="modal" data-target="#modalEliminar{{id_empleados}}"><img src="/images/eliminar.jpg" width="24" height="24"></button>
                        </td>
                    </tr>
                    <!-- Modal Modificar-->
                    <div class="modal fade" id="modalModificar{{id_empleados}}" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirmar modificación</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    ¿Esta seguro que desea modificar al empleado?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                    <a href="/admin/modifica_empleado/{{id_empleados}}"
                                        class="btn btn-primary">modificar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal Eliminar-->
                    <div class="modal fade" id="modalEliminar{{id_empleados}}" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirmar eliminación</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    ¿Esta seguro que desea eliminar al empleado?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                    <a href="eliminar_empleado/{{id_empleados}}" class="btn btn-danger">Eliminar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>