<div class="container">
    <center> <h2>Modificar Usuarios</h2></center>
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6" style="text-align: center; margin-top:70px">
            <h2>Veterinaria myDogs</h2>
            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <img src="/images/conejos.jpg" width="200px" HEIGHT="200px">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <img src="/images/registrar.jpg" width="200px" HEIGHT="200px">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <img src="/images/registrar2.jpg" width="200px" HEIGHT="200px">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <img src="/images/registrar3.jpg" width="200px" HEIGHT="200px">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-sm-6 col-xs-6" style="text-align: center;  margin-top:30px">
            <form action="" method="post">
                {{#each usuas}}
                <div class="form-group">
                    <input class="form-control" type="hidden" value="{{id}}" name="id" id="">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rol_id" id="veterinario" value="3">
                    <label class="form-check-label" for="veterinario">
                        Veterinario
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rol_id" id="auxiliar" value="2">
                    <label class="form-check-label" for="auxiliar">
                        Auxiliar
                    </label>
                </div>
                <div class="form-group">
                    <label for="usuario"></label>
                    <input type="text" class="form-control" name="nombre" value="{{nombre}}" id="usuario"
                        placeholder="Usuario">
                </div>
                <div class="form-group">
                    <label for="Password"></label>
                    <input type="password" class="form-control" id="Password" value="{{pass}}" name="pass"
                        placeholder="ContraseÃ±a">
                </div>
                <div class="form-group">
                    <label for="nombre"></label>
                    <input type="text" name="nombres" class="form-control" id="nombre" value="{{nombres}}"
                        placeholder="Nombre y Apellido">
                </div>
                <div class="form-group">
                    <label for="cedula"></label>
                    <input type="number" class="form-control" value="{{identificacion}}" name="identificacion"
                        id="cedula" placeholder="Cedula">
                </div>
                <div class="form-group">
                    <label for="edad"></label>
                    <input type="number" class="form-control" class="form-control" name="edad" value="{{edad}}"
                        id="edad" placeholder="Edad">
                </div>
                <div class="form-group">
                    <label for="telefono"></label>
                    <input type="number" class="form-control" name="telefono" value="{{telefono}}" id="telefono"
                        placeholder="Telefono">
                </div>
                {{/each}}
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="/admin/ver_usuarios" class="btn btn-secondary">Volver</a>
            </form>
        </div>
    </div>
</div>


