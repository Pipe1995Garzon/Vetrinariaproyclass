<div class="container">
    <center>
        <h1>Artículos sobre mascotas no tradicionales</h1>
    </center>
    <div class="card bg-dark text-white">
        <img class="card-img" src="/images/hurones.jpg" alt="Card image">
    </div>
    <br>
    <tr>
        <a href="" class="btn btn-success" data-toggle="modal" data-target="#ModalAgregar"><img src="/images/agregar.jpg" width="30" height="30">
            Agregar</a>
         <!-- Modal agregar-->
        <div class="modal fade" id="ModalAgregar" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Agregar Artículos</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/articulos/agregar_articulo" method="post">
                            <div class="form-group">
                                <label for="nombre_m">Nombre</label>
                                <input type="text" name="nombre_m"  class="form-control" id="nombre_m">
                            </div>
                            <div class="form-group">
                                <label for="articulo_m" class="col-form-label">Descripcion del articulo:</label>
                                <textarea class="form-control" name="articulo_m" id="articulo_m" rows="8"
                                    cols="10"></textarea>
                            </div>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-success">Agregar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </tr>
    {{#each mostrarTodo}}
    <div class="card">
        <h5 class="card-header"><img src="/images/icono1.png" width="30" height="30"> {{nombre_m}}</h5>
        <div class="card-body">
            <p class="card-text">{{articulo_m}}</p>
            <a href="" data-toggle="modal" data-target="#ModalEditar{{id_mnt}}"
                class="btn btn-info">
                <img src="/images/editar.jpg" width="30" height="30">
            </a>
            <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#modalEliminar{{id_mnt}}"><img
                    src="/images/eliminar.jpg" width="30" height="30"></a>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="ModalEditar{{id_mnt}}" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modificar</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/articulos/update/{{id_mnt}}" method="post">
                            <div class="form-group">
                                <input type="hidden" value="{{id_mnt}}" class="form-control" id="id">
                            </div>
                            <div class="form-group">
                                <label for="nombre_m">Nombre</label>
                                <input type="text" name="nombre_m" value="{{nombre_m}}" class="form-control" id="nombre_m">
                            </div>
                            <div class="form-group">
                                <label for="articulo_m" class="col-form-label">Descripcion del articulo:</label>
                                <textarea class="form-control" name="articulo_m" id="articulo_m" rows="8"
                                    cols="10">{{articulo_m}}</textarea>
                            </div>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary">Editar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal Eliminar-->
        <div class="modal fade" id="modalEliminar{{id_mnt}}" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Confirmar eliminación</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ¿Esta seguro que desea eliminar?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <a href="eliminar_articulo/{{id_mnt}}" class="btn btn-danger">Eliminar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    {{/each}}
</div>
<br>
