<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/images/portada1.jpg" width="400px" HEIGHT="400px" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/portada2.jpg" width="400px" HEIGHT="400px" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/portada3.jpg" width="400px" HEIGHT="400px" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12" style="text-align: center; margin-left:10px; margin-top:30px">
            <table class="table table-hover">
                <h1>Citas</h1>
                <thead>
                    <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Cedula</th>
                        <th scope="col">Cliente</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Mascota</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Tipo de cita</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each usua}}
                    <tr>
                        <th scope="row">{{id_citas}}</th>
                        <td>{{CC}}</td>
                        <td>{{Nombre}}</td>
                        <td>{{Telefono}}</td>
                        <td>{{mascota}}</td>
                        <td>{{descripcion}}</td>
                        <td>{{fecha}}</td>
                        <td>{{tipo}}</td>
                        <td>
                            <!-- Button trigger modal modificar -->
                            <button class="btn btn-outline-primary" data-toggle="modal"
                                data-target="#modalModificar{{id}}">Modificar fecha</button>
                        </td>
                        <td>
                            <!-- Button trigger modal eliminar-->
                            <button class="btn btn-outline-danger" data-toggle="modal"
                                data-target="#modalEliminar{{id}}">Eliminar cita</button>
                        </td>
                    </tr>
                    <!-- Modal Modificar-->
                    <div class="modal fade" id="modalModificar{{id}}" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirmar modificación</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    ¿Esta seguro que desea modificar la cita?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                    <a href="update/{{id}}" class="btn btn-primary">modificar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal Eliminar-->
                    <div class="modal fade" id="modalEliminar{{id}}" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirmar eliminación</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    ¿Esta seguro que desea eliminar la cita?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                    <a href="delete/{{id}}" class="btn btn-danger">Eliminar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>