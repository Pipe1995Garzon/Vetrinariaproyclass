<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6" style="text-align:center; margin-left:300px; margin-top:20px">
            <div class="card border-primary">
                <h2 class="card-header">Veterinaria myDods</h2>
                <div class="card-body">
                    <h3 class="card-title">Modicar cita</h3>
                    <form action="" method="post">
                        <div class="form-group">
                            <a href="/auxiliar/vercitas" class="btn btn-primary">Volver</a>
                        </div>
                        {{#each datacitas}}
                        <div class="form-group">
                            <label><h3>Datos principales de la cita</h3></label>
                            <input class="form-control" type="text" value="{{id_citas}}" name="id" id="">
                            <P>Mascota</P>
                            <input class="form-control" type="text" value="{{mascota}}" name="mascota" id="">
                            <P>descripcion</P>
                            <input class="form-control" type="text" value="{{descripcion}}" name="descripcion" id="">
                            <P>Fecha</P>

                            <input class="form-control" type="text" value="{{fecha}}" name="factual" id="">
                            <input class="form-control" type="date" value="{{fecha}}" name="fecha" id="">
                            <P>hora</P>
                            <input class="form-control" type="time" value="{{hora}}" name="hora" id="">
                        </div>
                        <div class="form-group">
                            <input type="radio" name="estado" value="Activa">Activa
                            <br>
                            <input type="radio" name="estado" value="Cancelada">Cancelada
                        </div>
                        {{/each}}

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Modificar</button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>