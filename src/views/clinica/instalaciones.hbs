<div class="container">
    <center>
        <h1>Instalaciones</h1>
    </center>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12" style="text-align: center; margin-top:1px">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/images/portada1.jpg" width="450px" height="480px"
                            alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/portada2.jpg" width="450px" height="480px"
                            alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/portada3.jpg" width="450px" height="480px"
                            alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-4" style="margin-top:1px">
            <tr>
                <a href="/clinica/agregar_instalacion" class="btn btn-success"><img src="/images/agregar.jpg" width="30"
                        height="30"> Agregar</a>
            </tr>
            {{#each mostrarInstalaciones}}
            <div class="card-deck">
                <div class="card" style="text-align: center;">
                    <img class="card-img-top" src="{{imagen}}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"> {{instalacion}}</h5>
                        <a href="#" data-toggle="modal" data-target="#ModalEditar{{id_instalaciones}}"
                            class="btn btn-secondary"><img src="/images/editar.jpg" width="30" height="30"></a>
                        <a href="#" class="btn btn-danger" data-toggle="modal"
                            data-target="#modalEliminar{{id_instalaciones}}"><img src="/images/eliminar.jpg" width="30"
                                height="30"></a>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="ModalEditar{{id_instalaciones}}" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modificar</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form action="/clinica/modificar_instalacion/{{id_instalaciones}}" method="post">
                                <div class="form-group">
                                    <input type="hidden" value="{{id_instalaciones}}" class="form-control" id="id">
                                </div>
                                <div class="form-group">
                                    <label for="instalacion">instalacion</label>
                                    <input type="text" name="instalacion" value="{{instalacion}}"
                                        class="form-control" id="id">
                                </div>
                                <div class="form-group">
                                    <label for="imagen">imagen</label>
                                    <input type="file"  class="form-control" name="imagen" value="{{imagen}}">
                                </div>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                <button type="submit" class="btn btn-primary">Editar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal Eliminar-->
            <div class="modal fade" id="modalEliminar{{id_instalaciones}}" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Confirmar eliminación</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            ¿Esta seguro que desea eliminar?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <a href="eliminar_instalaciones/{{id_instalaciones}}" class="btn btn-danger">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            {{/each}}
        </div>
    </div>
</div>
<br>
