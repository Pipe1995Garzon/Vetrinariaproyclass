<div class="container">
    <center>
        <h1>Agregar Servicio</h1>
    </center>
    <div class="row">
        <div class="col-sm-12" style="text-align: center; margin-left:300px,  margin-top:100px">
            <form action="" method="post">
                <div class="form-group">
                    <label for="servicio"></label>
                    <input class="form-control" name="servicio" id="servisio" placeholder="Nombre del servicio" required>
                </div>
                <div class="form-group">
                    <label for="message-text" class="col-form-label"></label>
                    <textarea class="form-control" name="descripcion" id="message-text" rows="3" cols="3" placeholder="Descripcion del servicio"
