<div class="container p-4">
    <div class="row">
        <div class="container p-4">
            <div class="row">
                <div class="col-md-4 mx-auto">
                    <div class="card">
                        <div class="card-bady">
                            <form action="" method="post">
                                <div class="form-group">
                                    <h2>Registro-Usuarios</h2>
                                    <h1>Usuarios</h1> <a href="/authentication/login" class="btn btn-info">Ir a registrar usuarios</a>
                                </div>
                                <div class="form-group">
                                    <input type="radio" name="rol_id" value="2">Auxiliar
                                    <br>
                                    <input type="radio" name="rol_id" value="3">Veterinario
                                </div>
                                <div class="form-group">
                                    <label>usuario</label>
                                    <input class="form-control" class="form-control" type="text" name="nombre" id=""
